{
  "expo": {
    "name": "Tasks",
    "slug": "tasks-app",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tasksapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#696FC7"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.savvyitch.tasksapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Nunito-Regular.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "nunito",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Nunito-Regular.ttf",
                    "weight": 600
                  }
                ]
              }
            ]
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#222831"
        }
      ],
      "expo-sqlite",
      [
        "expo-localization",
        {
          "supportedLocales": {
            "android": [
              "en",
              "uk",
              "ru"
            ],
            "io": [
              "en",
              "uk",
              "ru"
            ]
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "99c4b4bf-36c9-4a76-93a8-c64bd94f38c9"
      }
    }
  }
}
